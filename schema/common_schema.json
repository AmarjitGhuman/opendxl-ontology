{
    "openDxlApi": "0.1",
    "$id": "http://opendxl-ontology/schemas/common.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "info": {
        "title": "Type definitions",
        "version": "0.0.1",
        "description": "Type definitions"
    },
    "definitions": {
        "contextOtherFields" : {
            "product_name": {
                "description": "The source product of the message",
                "required": false,
                "example": "McAfee Threat Intelligence Exchange (TIE)"
            },
            "product_version": {
                "description": "The source product version of the message",
                "required": false,
                "example": "3.0.0"
            }
        },
        "responseOtherFields": {
            "status": {
                "description": "The status of the response",
                "required": true,
                "example": "200"
            },
            "status_text": {
                "description": "A free-form human-readable description of the Response status.",
                "required": false,
                "example": "The action succeeded."
            },
            "$ref": "#/definitions/contextOtherFields"
        },
        "errorResponses": {
            "400": {
                "description": "Bad Request"
            },
            "401": {
                "description": "Unauthorized"
            },
            "403": {
                "description": "Forbidden"
            },
            "404": {
                "description": "Not Found"
            },
            "500": {
                "description": "Internal Error"
            },
            "501": {
                "description": "Not Implemented"
            },
            "503": {
                "description": "Service Unavailable"
            }
        }
    }
}