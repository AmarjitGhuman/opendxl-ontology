{
  "openDxlApi": "0.1",
  "info": {
    "title": "Actions used to quarantine a device",
    "version": "0.0.1",
    "description": "Actions used to quarantine a device"
  },
  "requests": {
    "/action/quarantine/device/by_hostname": {
      "description": "Quarantines a device by its hostname",
      "payload": {
        "properties": {
          "target": {
            "$ref": "schema/openc2_schema.json#/definitions/device"
          }
        },
        "example": {
          "target": {
            "device": {
              "hostname": "testdevice.local.com",
              "device_id": "{cba1fc32-cc02-4f98-b210-35ecad2b5ea1}"
            }
          }
        }
      },
      "response": {
        "payload": {
          "properties": {
            "status": {
              "$ref": "schema/openc2_schema.json#/definitions/response"
            }
          },
          "example": {
            "status": 200,
            "status_text": "Successfully quarantined device by hostname"
          }
        }
      }
    },
    "/action/quarantine/device/by_mac_address": {
      "description": "Quarantines a device by its MAC address",
      "payload": {
        "properties": {
          "target": {
            "$ref": "schema/openc2_schema.json#/definitions/device"
          }
        },
        "example": {
          "target": {
            "mac_addr": "B8:CA:3A:77:A5:AE"
          }
        }
      },
      "response": {
        "payload": {
          "properties": {
            "status": {
              "$ref": "schema/openc2_schema.json#/definitions/response"
            }
          },
          "example": {
            "status": 200,
            "status_text": "Successfully quarantined device by mac address"
          }
        }
      }
    }
  }
}