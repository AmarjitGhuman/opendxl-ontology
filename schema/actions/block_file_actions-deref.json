{
    "openDxlApi": "0.1",
    "info": {
        "title": "Block file actions",
        "version": "0.0.1",
        "description": "Block file actions"
    },
    "requests": {
        "/action/block/file/by_hash": {
            "description": "Block file by hash",
            "payload": {
                "properties": {
                    "hashes": {
                        "type": "object",
                        "properties": {
                            "md5": {
                                "type": "string",
                                "description": "MD5 hash as defined in [RFC1321]"
                            },
                            "sha1": {
                                "type": "string",
                                "description": "SHA1 hash as defined in [RFC6234]"
                            },
                            "sha256": {
                                "type": "string",
                                "description": "SHA256 hash as defined in [RFC6234]"
                            }
                        }
                    }
                },
                "required": [
                    "hashes"
                ],
                "example": {
                    "hashes": {
                        "sha256": "22fe72a34f006ea67d26bb7004e2b6941b5c3953d43ae7ec24d41b1a928a6973"
                    }
                }
            },
            "response": {
                "otherFields": {
                    "status": {
                        "description": "The status of the response",
                        "required": false,
                        "example": "200"
                    },
                    "status_text": {
                        "description": "A free-form human-readable description of the Response status.",
                        "required": false,
                        "example": "The action succeeded."
                    },
                    "product_name": {
                        "description": "The product that is the source of the message",
                        "required": false,
                        "example": "McAfee Threat Intelligence Exchange (TIE)"
                    },
                    "product_version": {
                        "description": "The version of the product that is the source of the message",
                        "required": false,
                        "example": "3.0.0"
                    }
                }
            },
            "errorResponses": {
                "400": {
                    "description": "Bad Request"
                },
                "401": {
                    "description": "Unauthorized"
                },
                "403": {
                    "description": "Forbidden"
                },
                "404": {
                    "description": "Not Found"
                },
                "500": {
                    "description": "Internal Error"
                },
                "501": {
                    "description": "Not Implemented"
                },
                "503": {
                    "description": "Service Unavailable"
                }
            }
        }
    }
}
