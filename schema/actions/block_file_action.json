{
  "openDxlApi": "0.1",
  "info": {
    "title": "Actions used to block a file",
    "version": "0.0.1",
    "description": "Actions used to block a file"
  },
  "requests": {
    "/action/block/file/by_hash": {
      "description": "Blocks a device by its hash",
      "payload": {
        "properties": {
          "target": {
            "$ref": "schema/openc2_schema.json#/definitions/file"
          }
        },
        "example": {
          "target": {
            "file": {
              "hashes": {
                "sha256": "22fe72a34f006ea67d26bb7004e2b6941b5c3953d43ae7ec24d41b1a928a6973"
              }
            }
          }
        }
      },
      "response": {
        "payload": {
          "properties": {
            "status": {
              "$ref": "schema/openc2_schema.json#/definitions/response"
            }
          },
          "example": {
            "status": 200,
            "status_text": "Successfully blocked file"
          }
        }
      }     
    }
  }
}
