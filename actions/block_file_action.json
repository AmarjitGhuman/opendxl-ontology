{
  "openDxlApi": "0.1",
  "info": {
    "title": "Actions used to block a file",
    "version": "0.0.1",
    "description": "Actions used to block a file"
  },
  "requests": {
    "/action/block/file/by_hash": {
      "description": "Blocks a device by its hash",
      "payload": {
        "properties": {
          "target": {
            "properties": {
              "file": {
                "properties": {
                  "hashes": {
                    "properties":{
                      "sha256":{
                        "type": "string",
                        "description": "SHA256 hash of the file contents in Base16 (hex) encoding"
                      },
                      "sha1":{
                        "type": "string",
                        "description": "SHA1 hash of the file contents in Base16 (hex) encoding"  
                      },
                      "md5":{
                        "type": "string",
                        "description": "MD5 hash of the file contents in Base16 (hex) encoding"  
                      }
                    }
                  },
                  "name": {
                    "type": "string",
                    "description": "The name of the file as defined in the file system"
                  },                
                  "path": {
                    "type": "string",
                    "description": "The absolute path to the location of the file in the file system"
                  }
                },
                "description": "A 'file' Target MUST contain at least one property. If specifying hashes, at least one hash type must be specified"
              }
            }
          }
        },
        "example": {
          "target": {
            "file": {
              "hashes":{
                  "sha256":"22fe72a34f006ea67d26bb7004e2b6941b5c3953d43ae7ec24d41b1a928a6973"
              }
            }
            }
          }
      },
      "response": {
        "payload": {
          "properties": {
            "status": {
              "type": "integer",
              "enum" : [102, 200, 400, 401, 403, 404, 500, 501, 503]
            }
          },
          "example": {
            "status": 200
          }
        }
      }
    }
  }
}
